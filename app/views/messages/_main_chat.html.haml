.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      .main-header__left-box__menber-list
        Member : 
        - @group.users.each do |group_user|  
          = group_user.name
    .main-header__edit-btn
      -# = link_to "#" do
      = link_to edit_group_path(@group) do
        Edit
  .messages
    = render @messages
    -# .message-1
    -#   .message-1__upper-info
    -#     .message-1__upper-info__talker
    -#       kazu
    -#     .message-1__upper-info__date
    -#       2020/03/27(fry) 12:30:40
    -#   .message-1__text
    -#     こんにちは
    -# .message-2    
    -#   .message-2__upper-info
    -#     .message-2__upper-info__talker
